<!--
 This build file will merge all css files related directly to conjoon into the
 file
  conjoon-all.css
 and move it to the folders
  ../build/htdocs/install/files/js/conjoon/resources/css/
 and
  ../src/corelib/js/resources/css

 WARNING!
 This build file is a sub-task and will not rebuild the project. In order
 to rebuild the project, use the build.xml found in this folder which will
 also call this build file.

 @author Thorsten Suckow-Homberg <ts@siteartwork.de>
-->

<project name="conjoon-css" default="deploy" basedir="./">

    <!-- load up properties file -->
    <property file="./build-tools/build.properties" />
    <includepath classpath="./build-tools/phing" />


    <target name="clean">
      <delete file="./build/build/htdocs/install/files/js/conjoon/resources/css/conjoon-all.css" />
      <delete file="./src/corelib/js/resources/css/conjoon-all.css" />
    </target>

    <target name="deploy" depends="clean">
        <copy file="./build-tools/header.txt"
            tofile="./build/build/htdocs/install/files/js/conjoon/resources/css/conjoon-all.css"
            overwrite="true"
        />

        <php function="tempnam" returnProperty="conjoon.cssmerge.tempfile">
          <param value="/tmp" />
          <param value="conjoon.cssmerge" />
        </php>

        <append destFile="${conjoon.cssmerge.tempfile}">
          <fileset dir="./src/corelib/js/resources/css">
            <include name="**/com-conjoon-groupware.css" />
          </fileset>
        </append>

        <append destFile="${conjoon.cssmerge.tempfile}">
          <fileset dir="./src/corelib/js/resources/css">
            <exclude name="**/conjoon-all.css" />
            <exclude name="**/com-conjoon-groupware.css" />
            <exclude name="**/README.txt" />
          </fileset>
        </append>

        <exec
            command='java -jar ${yuicompressor_path} -v --type css -o "${conjoon.cssmerge.tempfile}" "${conjoon.cssmerge.tempfile}"'
            dir="./"
            passthru="true"
            checkreturn="true"
        />

        <append file="${conjoon.cssmerge.tempfile}" destFile="./build/build/htdocs/install/files/js/conjoon/resources/css/conjoon-all.css" />
        <copy file="${conjoon.cssmerge.tempfile}" tofile="./src/corelib/js/resources/css/conjoon-all.css" />

        <delete file="${conjoon.cssmerge.tempfile}" verbose="true" failonerror="true" />
    </target>

</project>
