<!--
 This build file will merge all js files related directly to the login process
 of conjoon into the files
  conjoon-login.js
    and
  conjoon-login-debug.js
 and move them to the folder ../build/htdocs/install/files/js/conjoon/
 It will also create the file
  ../build/htdocs/install/files/conjoon_application/modules/default/views/scripts/reception/_scripts.phtml
 and place the logic for loading the js files
  ../build/htdocs/install/files/js/ext/ext-all.js
 and
  ../build/htdocs/install/files/js/conjoon/conjoon-login.js
 into it.

 WARNING!
 This build file is a sub-task and will not rebuild the project. In order
 to rebuild the project, use the build.xml found in this folder which will
 also call this build file.

 @author Thorsten Suckow-Homberg <ts@siteartwork.de>
-->

<project name="conjoon-login" default="deploy" basedir="./">

    <!-- load up properties file -->
    <property file="./build-tools/build.properties" />
    <includepath classpath="./build-tools/phing" />


    <target name="clean">
      <delete file="./build/build/htdocs/install/files/js/conjoon/conjoon-login-debug.js" />
      <delete file="./build/build/htdocs/install/files/js/conjoon/conjoon-login.js" />
      <delete file="./build/build/htdocs/install/files/conjoon_application/modules/default/views/scripts/reception/_scripts.phtml" />
    </target>

    <target name="make_script" depends="clean">
      <copy file="./src/www/application/modules/default/views/scripts/reception/_scripts.phtml"
          tofile="./build/build/htdocs/install/files/conjoon_application/modules/default/views/scripts/reception/_scripts.phtml"
          overwrite="true">

       <filterchain>
        <filterreader classname="filters.PruneFileHeader" />
        <filterreader classname="filters.ProcessDevFragments" />
      </filterchain>
      </copy>


    </target>

    <target name="deploy" depends="clean,make_script">

        <copy file="./build-tools/header.txt"
            tofile="./build/build/htdocs/install/files/js/conjoon/conjoon-login-debug.js"
            overwrite="true"
        />
        <copy file="./build-tools/header.txt"
            tofile="./build/build/htdocs/install/files/js/conjoon/conjoon-login.js"
            overwrite="true"
        />


        <php function="tempnam" returnProperty="conjoon.login.jsmerge.tempfile">
          <param value="/tmp" />
          <param value="conjoon.login.jsmerge" />
        </php>

        <append destFile="${conjoon.login.jsmerge.tempfile}">
          <filterchain>
           <filterreader classname="filters.AddLinebreak" />
           <striplinecomments>
            <comment value="#" />
            <comment value="--" />
            <comment value="//" />
           </striplinecomments>
           <stripphpcomments />
          </filterchain>
          <filelist dir="./" listfile="./build-tools/merge_list_js_login.txt" />
        </append>

        <append file="${conjoon.login.jsmerge.tempfile}" destFile="./build/build/htdocs/install/files/js/conjoon/conjoon-login-debug.js" />

        <exec
            command='java -jar ${yuicompressor_path} -v --type js -o "${conjoon.login.jsmerge.tempfile}" "${conjoon.login.jsmerge.tempfile}"'
            dir="./"
            passthru="true"
            checkreturn="true"
        />

        <append file="${conjoon.login.jsmerge.tempfile}" destFile="./build/build/htdocs/install/files/js/conjoon/conjoon-login.js" />

        <delete file="${conjoon.login.jsmerge.tempfile}" verbose="true" failonerror="true" />
    </target>

</project>
